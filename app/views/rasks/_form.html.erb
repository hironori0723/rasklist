<%= form_with(model: rask, local: true) do |f| %>
  <% if rask.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% rask.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.label :content, 'ラスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>